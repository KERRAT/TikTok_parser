<div id="<%= dom_id social_network %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= social_network.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Base link:</strong>
    <%= social_network.base_link %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this social network", social_network, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this social network', edit_social_network_path(social_network), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
